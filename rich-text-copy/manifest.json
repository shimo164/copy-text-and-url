{
	"manifest_version": 3,
	"name": "Rich Text Copy",
	"version": "1.2",
	"description": "Copy the selected text or the title of the tab to the clipboard as either a rich-text hyperlink or a markdown link.",
	"permissions": [
		"activeTab",
		"contextMenus",
		"scripting",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"getSelection.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			]
		}
	],
	"options_page": "options.html",
	"action": {
		"default_title": "Rich Text Copy"
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	}
}
